<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
	<Script file="WorldQuests.lua" />

	<Button name="QuestBuster_WorldQuests_ButtonTemplate" frameStrata="LOW" enableMouse="true" virtual="true" hidden="true">
		<Size>
			<AbsDimension x="18" y="18"/>
		</Size>
		<Layers>
			<Layer level="ARTWORK">
				<Texture name="$parentIcon" alphaMode="BLEND"/>
			</Layer>
		</Layers>
		<PushedTexture file="Interface\Buttons\UI-Quickslot-Depress"/>
		<HighlightTexture alphaMode="ADD" file="Interface\Buttons\ButtonHilight-Square"/>
		<Scripts>
			<OnEnter>
			</OnEnter>
			<OnLeave>
			</OnLeave>
		</Scripts>
	</Button>

	<Frame name="QuestBuster_WorldQuests_TypeBarTemplate" frameStrata="LOW" virtual="true">
		<Size x="280" y="18" />
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentText" inherits="GameFontNormalSmall">
					<Anchors>
						<Anchor point="CENTER" relativeTo="$parent" relativePoint="CENTER">
							<Offset>
								<AbsDimension x="0" y="1" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Frame>

	<Frame name="QuestBuster_WorldQuests_SubBarTemplate" frameStrata="LOW" virtual="true">
		<Size x="280" y="18" />
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentText" inherits="GameFontNormalSmall">
					<Anchors>
						<Anchor point="CENTER" relativeTo="$parent" relativePoint="CENTER">
							<Offset>
								<AbsDimension x="0" y="1" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Frame>

	<Frame name="QuestBuster_WorldQuests_QuestBarTemplate" frameStrata="LOW" virtual="true">
		<Size x="280" y="18" />
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentText" inherits="GameFontNormalSmall">
					<Anchors>
						<Anchor point="CENTER" relativeTo="$parent" relativePoint="CENTER">
							<Offset>
								<AbsDimension x="0" y="1" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="$parent_tomtom" inherits="QuestBuster_WorldQuests_ButtonTemplate" hidden="true">
				<Anchors>
					<Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="TOPLEFT" x="-3" y="0"/>
				</Anchors>
			</Button>
		</Frames>
	</Frame>

	<Frame name="QuestBuster_WorldQuests_MoverFrame" parent="UIParent" frameStrata="LOW" toplevel="true" enableMouse="true" movable="true" hidden="false">
		<Size>
			<AbsDimension x="320" y="10"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER" relativeTo="UIParent"/>
		</Anchors>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parent_Texture" file="Interface\AddOns\QuestBuster\Images\QuestBuster_Mover">
					<Size>
						<AbsDimension x="320" y="16"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="0" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<FontString name="$parentLabel" inherits="GameFontHighlight" text="World Quests">
					<Anchors>
						<Anchor point="CENTER">
							<Offset>
								<AbsDimension x="0" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="$parent_ConfigMenu" hidden="false">
				<Size>
					<AbsDimension x="16" y="16"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
						<Offset>
							<AbsDimension x="8" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<NormalTexture file="Interface\AddOns\QuestBuster\Images\QuestBuster_Mover_Menu" />
				<Scripts>
					<OnClick>
						securecall("QuestBuster_Config_Show");
					</OnClick>
				</Scripts>
			</Button>
			<Button name="$parent_LockFrame" hidden="false">
				<Size>
					<AbsDimension x="16" y="16"/>
				</Size>
				<Anchors>
					<Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="TOPRIGHT">
						<Offset>
							<AbsDimension x="-32" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<NormalTexture file="Interface\AddOns\QuestBuster\Images\QuestBuster_Mover_Unlocked" />
				<Scripts>
					<OnClick>
						securecall("QuestBuster_WorldQuestsFrame_Lock_OnClick");
					</OnClick>
				</Scripts>
			</Button>
			<Button name="$parent_CollapseFrame" hidden="false">
				<Size>
					<AbsDimension x="16" y="16"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_LockFrame" relativePoint="TOPRIGHT">
						<Offset>
							<AbsDimension x="-2" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<NormalTexture file="Interface\AddOns\QuestBuster\Images\QuestBuster_Mover_Collapse" />
				<Scripts>
					<OnClick>
						securecall("QuestBuster_WorldQuestsFrame_Collapse_OnClick");
					</OnClick>
				</Scripts>
			</Button>
			<Button name="$parent_CloseFrame" hidden="false">
				<Size>
					<AbsDimension x="16" y="16"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_CollapseFrame" relativePoint="TOPRIGHT">
						<Offset>
							<AbsDimension x="-2" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<NormalTexture file="Interface\AddOns\QuestBuster\Images\QuestBuster_Mover_Close"/>
				<Scripts>
					<OnClick>
						securecall("QuestBuster_WorldQuestsFrame_Close_OnClick");
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				self:RegisterForDrag("LeftButton");
			</OnLoad>
			<OnDragStart>
				if (not QuestBusterOptions[QuestBusterEntry].world_quests_frame.locked) then
					self.dragging = true;
					self:StartMoving();
				end
			</OnDragStart>
			<OnDragStop>
				self.dragging = false;
				if (not QuestBusterOptions[QuestBusterEntry].world_quests_frame.locked) then
					self.dragging = false;
					self:StopMovingOrSizing();
				end
			</OnDragStop>
			<OnUpdate>
				if (self.dragging) then
					QuestBuster_WorldQuestsFrame_OnDrag();
				end
			</OnUpdate>
		</Scripts>
	</Frame>

	<Frame name="QuestBuster_WorldQuestsFrame" parent="UIParent" frameStrata="LOW" toplevel="true" enableMouse="true" movable="true" hidden="false">
		<Size>
			<AbsDimension x="320" y="28"/>
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT" relativeTo="QuestBuster_WorldQuests_MoverFrame" relativePoint="BOTTOMLEFT">
				<Offset>
					<AbsDimension x="0" y="2"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentNoneFound" inherits="GameFontHighlight" text="No World Quests!" hidden="false">
					<Anchors>
						<Anchor point="CENTER">
							<Offset>
								<AbsDimension x="0" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Backdrop bgFile="Interface\TutorialFrame\TutorialFrameBackground" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<EdgeSize>
				<AbsValue val="16"/>
			</EdgeSize>
			<TileSize>
				<AbsValue val="16"/>
			</TileSize>
			<BackgroundInsets>
				<AbsInset left="5" right="5" top="5" bottom="5"/>
			</BackgroundInsets>
		</Backdrop>
		<Scripts>
			<OnLoad>
				QuestBuster_WorldQuestsFrame_OnLoad(self);
			</OnLoad>
			<OnEvent>
				QuestBuster_WorldQuestsFrame_OnEvent(self, event, ...);
			</OnEvent>
		</Scripts>
	</Frame>
</Ui>